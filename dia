#!/bin/bash

. ~/diary_conf

if [[ $DIARY_DIR = "" ]]; then
  DIARY_DIR=~/diary/
fi

if [[ $1 = "" ]]; then
  vim $DIARY_DIR$(date "+%Y/%m/%d.md")
fi

if [[ $1 = "past" ]]; then
  vim $DIARY_DIR$(date -v -$2 "+%Y/%m/%d.md")
fi

if [[ $1 = "future" ]]; then
  vim $DIARY_DIR$(date -v +$2 "+%Y/%m/%d.md")
fi

if [[ $1 = "commit" ]]; then
  message=`date "+%Y-%m-%d"`
  cd $DIARY_DIR
  git add -A
  git commit -m "$message"
fi

if [[ $1 = "push" ]]; then
  cd $DIARY_DIR
  git push origin master
fi

if [[ $1 = "grep" ]]; then
  cd $DIARY_DIR
  git grep "$2"
fi

if [[ $1 = "open" ]]; then
  if [ $# -ge 3 ];then
    vim $DIARY_DIR$2/$3/$4.md
  else
    vim $DIARY_DIR$2.md
  fi
fi

exit 0
